<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <servlet-mapping>
        <servlet-name>ToDoListServlet</servlet-name>
        <url-pattern>/todolist</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ToDoListServlet</servlet-name>
        <servlet-class>servlets.ToDoListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddTaskServlet</servlet-name>
        <url-pattern>/addTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddTaskServlet</servlet-name>
        <servlet-class>servlets.AddTaskServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <url-pattern>/deleteTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <servlet-class>servlets.DeleteTaskServlet</servlet-class>
    </servlet>

</web-app>
